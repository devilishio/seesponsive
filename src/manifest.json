{
  "manifest_version": 2,

  "name": "Seesponsive",
  "description": "Interactively see how a website's layout changes responsively",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon19.png",
    "default_title": "Seesponsive"
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "background": {
    "page" : "event_page.html",
    "persistent": false
  },

  "permissions": [
    "webNavigation",
    "activeTab",
    "http://*/",
    "https://*/"
  ]
}