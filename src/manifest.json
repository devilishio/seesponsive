{
  "manifest_version": 2,

  "name": "Seesponsive",
  "description": "Interactively see how a website's layout changes responsively",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon19.png",
    "default_title": "Seesponsive"
  },

  "background": {
    "scripts": ["event_page.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "http://*/",
    "https://*/"
  ]
}